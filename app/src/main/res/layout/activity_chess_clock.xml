<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_chess_clock"
    tools:context="br.edu.ifspsaocarlos.sdm.jogossdm.activity.ChessClockActivity">

    <ImageButton
        android:id="@+id/btn_playerTwo"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:rotation="180"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_red_chess" />

    <Chronometer
        android:id="@+id/chronometerPlayerTwo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:rotation="180"
        android:textAlignment="center"
        android:textColor="#d62c25"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_playerTwo" />

    <ImageButton
        android:id="@+id/btn_playerOne"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="120dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_orange_chess" />

    <Chronometer
        android:id="@+id/chronometerPlayerOne"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:textColor="#ff8b38"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_playerOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_count_player_two"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:rotation="180"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#7d7d7d"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_playerTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_count_player_one"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#cecece"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_playerOne"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:rotation="180"
        android:text="movimentos:"
        android:textAlignment="center"
        android:textColor="#7d7d7d"
        app:layout_constraintEnd_toStartOf="@+id/btn_playerTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_count_player_two" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="movimentos:"
        android:textAlignment="center"
        android:textColor="#cecece"
        app:layout_constraintBottom_toTopOf="@+id/tv_count_player_one"
        app:layout_constraintEnd_toStartOf="@+id/btn_playerOne"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Total de"
        android:textAlignment="center"
        android:textColor="#cecece"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/btn_playerOne"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:rotation="180"
        android:text="Total de"
        android:textAlignment="center"
        android:textColor="#7d7d7d"
        app:layout_constraintEnd_toStartOf="@+id/btn_playerTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>
